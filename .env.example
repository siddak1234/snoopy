# Required for deployment: set these in your host (Vercel, Docker, etc.) or in .env.local for local dev.

# Database (required for Prisma)
POSTGRES_PRISMA_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"

# NextAuth (required for auth)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Google OAuth (required for sign-in)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

